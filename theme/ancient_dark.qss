/* ===== 基础主题 ===== */
* {
    color: #b1b1b1;
    background-color: #323232;
}

/* ===== 工具提示 ===== */
QToolTip {
    border: 1px solid #1a1a1a;
    background-color: #ffa02f;
    padding: 4px;
    border-radius: 3px;
    opacity: 240;
    color: black;
}

/* ===== 状态效果 ===== */
QWidget:disabled {
    color: #606060;
}

QWidget:focus {
    outline: 1px solid #ffa02f;
}

/* ===== 列表和菜单 ===== */
QAbstractItemView {
    background: linear-gradient(to bottom, #4d4d4d, #5d5d5d);
    selection-background-color: #ffa02f;
}

QMenu {
    border: 1px solid #333;
    padding: 4px;
    background-color: #424242;
}

QMenu::item {
    padding: 6px 24px;
    border-radius: 3px;
}

QMenu::item:selected {
    background-color: #ffa02f;
    color: black;
}

QMenu::separator {
    height: 1px;
    background-color: #555;
    margin: 4px 8px;
}

/* ===== 按钮 ===== */
QPushButton {
    background: linear-gradient(to bottom, #565656, #464646);
    border: 1px solid #2a2a2a;
    border-radius: 4px;
    padding: 5px 12px;
    min-height: 28px;
}

QPushButton:hover {
    border: 1px solid #ffa02f;
}

QPushButton:pressed {
    background: linear-gradient(to bottom, #3a3a3a, #2a2a2a);
}

/* ===== 输入控件 ===== */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #444;
    border: 1px solid #2a2a2a;
    border-radius: 4px;
    padding: 5px;
    selection-background-color: #ffa02f;
}

QComboBox {
    background: linear-gradient(to bottom, #565656, #464646);
    border: 1px solid #2a2a2a;
    border-radius: 4px;
    padding: 5px;
    min-height: 28px;
}

QComboBox:hover, QComboBox:focus {
    border-color: #ffa02f;
}

QComboBox::drop-down {
    width: 24px;
    border-left: 1px solid #555;
}

/* ===== 滚动条 ===== */
QScrollBar:horizontal, QScrollBar:vertical {
    background: #383838;
    border: none;
    margin: 0;
}

QScrollBar::handle {
    background: #ffa02f;
    border-radius: 2px;
    min-height: 20px;
    min-width: 8px;
}

QScrollBar::add-line, QScrollBar::sub-line {
    background: #555;
    width: 0;
    height: 0;
}

/* ===== 选项卡 ===== */
QTabBar::tab {
    padding: 8px 16px;
    background: #3a3a3a;
    border: 1px solid #444;
    border-bottom: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}

QTabBar::tab:selected {
    background: #323232;
    border-color: #ffa02f;
}

QTabBar::tab:hover {
    background: #4a4a4a;
}

/* ===== 复选框/单选框 ===== */
QCheckBox::indicator, QRadioButton::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #b1b1b1;
    border-radius: 3px;
}

QCheckBox::indicator:checked {
    background-color: #ffa02f;
    image: none;
    border: none;
}

QRadioButton::indicator:checked {
    background-color: #ffa02f;
    border: 4px solid #323232;
}

/* ===== 分组框 ===== */
QGroupBox {
    border: 1px solid #444;
    border-radius: 4px;
    margin-top: 20px;
    padding-top: 10px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 5px;
}