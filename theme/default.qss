/* 复选框方框默认状态 */
/* 复选框基础样式 */
QCheckBox {
    spacing: 8px;
    color: #333333;
    font-size: 12px;
    font-family: "Arial", sans-serif;
    padding: 2px 0px;  /* 关键修复1：增加垂直padding */
}

/* 复选框容器对齐 */
QCheckBox::indicator {
    width: 16px;
    height: 16px;
    subcontrol-position: left center;  /* 关键修复2：垂直居中定位 */
    margin-top: -1px;  /* 关键修复3：微调字体基线偏移 */
}

/* 方框基础样式 */
QCheckBox::indicator {
    border: 1px solid #dddddd;
    border-radius: 3px;
    background-color: #ffffff;
}

/* 以下状态样式保持原有设计... */
QCheckBox::indicator:hover { border-color: #4CAF50; }
QCheckBox::indicator:checked {
    background-color: #4CAF50;
    border-color: #45a049;
}
QCheckBox::indicator:checked:hover { background-color: #45a049; }
QCheckBox:disabled { color: #999999; }
QCheckBox::indicator:disabled {
    background-color: #f5f5f5;
    border-color: #e0e0e0;
}
QCheckBox::indicator:indeterminate {
    background-color: #94D097;
    border-color: #45a049;
}
QProgressBar {
    border: 2px solid #E0E0E0;
    border-radius: 8px;
    background-color: #F0F9F0;
    text-align: center;
    padding: 1px;
}

QProgressBar::chunk {
    background-color: qlineargradient(
        x1:0, y1:0,
        x2:1, y2:0,
        stop:0 #6DD47C,
        stop:1 #4CAF50
    );
    border-radius: 6px;
    border-bottom-right-radius: 6px;
    border-top-right-radius: 6px;
    margin: 1px;
    border: 1px solid #45A049;
}