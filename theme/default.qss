QToolBox {  
    border: 1px solid #dddddd;         
    border-radius: 4px;  
    padding: 2px;  
    font-family: "Arial", sans-serif;  
}  

QToolBox::tab {
    background-color:  #e0e0e0;
    color: white;
    padding: 2px;
    border-radius: 4px;
    border: none;
}

QToolBox::tab:selected {
    background-color: #45a049;
}

QToolBox::tab:!selected {
    background-color: #94D097;
}

QToolBox::tab:hover {
    background-color: #45a049;
}

QPushButton {
    border: none;
    background-color: #4CAF50;
    color: white;
    padding: 5px 10px;
    text-align: center;
    text-decoration: none;
    font-size: 12px;
    border-radius: 2px;
}

QPushButton:hover {
    background-color: #45a049;
}

QPushButton:pressed {
    background-color: #3d8b40;
}

QPushButton:disabled {
    background-color: #ccc;
    color: #999;
}
QLineEdit {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #dddddd;
    border-radius: 4px;
    padding: 3px 5px;
    font-size: 12px;
    font-family: "Arial", sans-serif;
    outline: none;
}

QLineEdit:focus {
    border-color: #008080;
}

QLineEdit:hover {
    border-color: #4CAF50;
}

QLineEdit:disabled {
    background-color: #f5f5f5;
    color: #999999;
    border-color: #e0e0e0;
}

QLineEdit::placeholder-text {
    color: #999999;
    opacity: 1;
}
QTextEdit {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #dddddd;
    border-radius: 4px;
    padding: 10px;
    font-size: 14px;
    font-family: "Arial", sans-serif;
    outline: none;
}

QTextEdit:focus {
    border-color: #008080;
}

QTextEdit:hover {
    border-color: #b3b3b3;
}

QTextEdit:disabled {
    background-color: #f5f5f5;
    color: #999999;
    border-color: #e0e0e0;
}
QTreeView {
    border: 1px solid #8f8f91;
    border-radius: 4px;
    padding: 2px;
    background-color: #f0f0f0;
    outline: none;
}

QTreeView::item {
    padding: 3px;
    border: 1px solid transparent;
    border-radius: 2px;
    background-color: #ffffff;
    color: #333333;
    font-size: 12px;
    font-family: "Arial", sans-serif;
}

QTreeView::item:selected {
    background-color: #4CAF50;
    color: #ffffff;
    border: 1px solid #4CAF50;
}

QTreeView::item:hover {
    background-color: #4CAF50;
    color: #333333;
}

QTreeView::branch {
    background-color: #f0f0f0;
    color: #333333;
}

QTreeView::branch:selected {
    background-color: #e0e0e0;
    color: #ffffff;
}

QTreeView::branch:hover {
    background-color: #4CAF50;
    color: #333333;
