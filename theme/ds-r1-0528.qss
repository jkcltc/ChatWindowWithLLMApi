/* 主窗口样式 */
QWidget {
    font-family: 'Segoe UI', 'Microsoft YaHei', sans-serif;
    font-size: 14px;
}


QLabel {
    font-size: 15px;
    font-weight: bold;
    color: #1a2980; /* 从白色改为深蓝色 */
    padding: 2px;
    background-color: rgba(255, 255, 255, 0.55); /* 提高背景不透明度 */
    border-radius: 2px;
}


/* 图标样式 */
QLabel#icon-user {
    background-color: #ff416c;
    border-radius: 30px;
    color: white;
    font-size: 24px;
}

QLabel#icon-chart-bar {
    background-color: #1a2980;
    border-radius: 30px;
    color: white;
    font-size: 24px;
}

QLabel#icon-cog {
    background-color: #26d0ce;
    border-radius: 30px;
    color: white;
    font-size: 24px;
}

/* 按钮样式 */
QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #1a2980, stop:1 #26d0ce);
    color: white;
    border: none;
    border-radius: 1px;
    padding: 10px 20px;
    font-weight: bold;
}

QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #2334a3, stop:1 #3de0de);
}

QPushButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #121f5e, stop:1 #1db3b1);
}

QPushButton:disabled {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #a0a0a0, stop:1 #c0c0c0);  /* 灰色渐变 */
    color: #393939;  /* 浅灰色文字 */
    border: 1px solid #d0d0d0;  /* 浅灰色边框 */
}

/* 表单样式 */
QGroupBox[title="用户信息表单"] {
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 15px;
    border: 1px solid #e0e0e0;
}

QLineEdit {
    background-color: #f0f4f8;
    border: 2px solid #d0d8e0;
    border-radius: 4px;
    padding: 3px 6px;
    font-size: 14px;
    min-height: 20px;
    qproperty-toolTip: "点击输入文本";
}

QLineEdit:focus {
    border-color: #26d0ce;
    background-color: white;
}

QRadioButton, QCheckBox {
    color: #333333;
    spacing: 8px;
}

QRadioButton::indicator, QCheckBox::indicator {
    width: 20px;
    height: 20px;
    border-radius: 10px;
    border: 2px solid #d0d8e0;
}

QRadioButton::indicator:checked, QCheckBox::indicator:checked {
    background-color: #26d0ce;
    border: 2px solid #1a2980;
}

QGroupBox[title="性别"], QGroupBox[title="兴趣爱好"] {
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    margin-top: 10px;
}

/* 状态栏 */
QStatusBar {
    background-color: rgba(26, 41, 128, 0.85);
    color: white;
    font-size: 12px;
    padding: 5px 10px;
}

/* 进度条 */
QProgressBar {
    border: 1px solid #d0d8e0;
    border-radius: 5px;
    background-color: #f0f4f8;
    text-align: center;
}

QProgressBar::chunk {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #1a2980, stop:1 #26d0ce);
    border-radius: 4px;
}

/* 选项卡 */
QTabWidget::pane {
    border: 1px solid #d0d8e0;
    border-radius: 8px;
    background: white;
}

QTabBar::tab {
    background: #f0f4f8;
    color: #333;
    padding: 8px 20px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    margin-right: 2px;
    border: 1px solid #d0d8e0;
    border-bottom: none;
}

QTabBar::tab:selected {
    background: white;
    color: #1a2980;
    font-weight: bold;
    border-color: #d0d8e0;
}

QTabBar::tab:hover {
    background: #e0e8f0;
}


/* 新增树控件样式 */
QTreeWidget {
    background-color: rgba(255, 255, 255, 0.85);
    border-radius: 8px;
    border: 1px solid #d0d8e0;
    padding: 5px;
    font-size: 14px;
    outline: 0; /* 移除焦点虚线框 */
}

QTreeWidget::item {
    height: 32px;
    padding: 4px;
    border-bottom: 1px solid #eaeaea;
}

QTreeWidget::item:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(26, 41, 128, 0.3), stop:1 rgba(38, 208, 206, 0.3));
    color: #9c1a2980;
}

QTreeWidget::item:selected {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(26, 41, 128, 0.3), stop:1 rgba(38, 208, 206, 0.3));
    color: #1a2980;
}

QTextEdit {
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    border: 1px solid #d0d8e0;
    padding: 6px;
    font-size: 18px;
    qproperty-toolTip: "点击输入文本";
}

QTextBrowser {
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    border: 1px solid #d0d8e0;
    padding: 6px;
    font-size: 18px;
}

/* ====== QListWidget 样式 ====== */
QListWidget {
    background-color: rgba(255, 255, 255, 0.9);
    border: 2px solid #d0d8e0;
    border-radius: 10px;
    padding: 5px;
    outline: none;
    color: #333333;
    font-size: 14px;
}

QListWidget::item {
    background-color: #f0f4f8;
    border-radius: 8px;
    padding: 2px 2px;
    margin: 4px 0;
}

QListWidget::item:selected {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #1a2980, stop:1 #26d0ce);
    color: white;
    border: none;
}

QListWidget::item:hover {
    background-color: #e0e8f0;
}

/* ====== QComboBox 样式 ====== */
QComboBox {
    background-color: #f0f4f8;
    border: 2px solid #d0d8e0;
    border-radius: 4px;
    padding: 2px 4px;
    font-size: 12px;
    qproperty-toolTip: "点击后展开";
    color: #333333;
}

QComboBox:editable {
    background: white;
}

QComboBox:focus {
    border-color: #26d0ce;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 10px;
    border-left: 1px solid #d0d8e0;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
}

QComboBox::down-arrow {
    width: 4px;
    height: 4px;
}

QComboBox QAbstractItemView {
    background-color: rgba(255, 255, 255, 0.95);
    border: 2px solid #d0d8e0;
    border-radius: 4px;
    padding: 5px;
    outline: none;
    selection-background-color: #26d0ce;
    selection-color: white;
}

QComboBox QAbstractItemView::item {
    padding: 2px 4px;
    border-radius: 3px;
    margin: 2px;
}

QComboBox QAbstractItemView::item:hover {
    background-color: #e0e8f0;
}


/* 卡片样式 */
QGroupBox {
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 8px;
    border: none;
    padding-top: 20px;
    font-size: 18px;
    font-weight: bold;
    color: #1a2980;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 0 10px;
    background-color: transparent;
}
/* ====== QToolButton 样式 ====== */
QToolButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #1a2980, stop:1 #26d0ce);
    color: white;
    border: none;
    border-radius: 1px;
    margin: 1px;       /* 最小化外边距 */
    font-weight: bold;
    min-width: 0;      /* 允许宽度缩小 */
    min-height: 24;     /* 只能24 */
}

QToolButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #2334a3, stop:1 #3de0de);
}

QToolButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #121f5e, stop:1 #1db3b1);
}

QToolButton:disabled {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #a0a0a0, stop:1 #c0c0c0);
    color: #393939;
}


/* 带菜单指示器样式 */
QToolButton::menu-button {
    background: transparent;
}

QScrollBar:vertical {
    background: rgba(240, 244, 248, 0.7);
    width: 12px;
    margin: 0;
    border-radius: 4px;
}

QScrollBar::handle:vertical {
    background: rgb(67, 123, 179); /* 中性灰蓝色 */
    border-radius: 4px;
    min-height: 24px;
}

QScrollBar::add-line:vertical, 
QScrollBar::sub-line:vertical {
    height: 0px; /* 隐藏箭头按钮 */
    background: none;
}

/* 水平滚动条 */
QScrollBar:horizontal {
    background: rgb(67, 123, 179);
    height: 9px;
    margin: 0;
    border-radius: 4px;
}

QScrollBar::handle:horizontal {
    background:rgb(73, 138, 202);
    border-radius: 4px;
    min-width: 24px;
}

/* 悬停效果 */
QScrollBar::handle:vertical:hover,
QScrollBar::handle:horizontal:hover {
    background:rgb(63, 103, 150); /* 稍暗的灰色 */
}

/* 按压效果 */
QScrollBar::handle:vertical:pressed,
QScrollBar::handle:horizontal:pressed {
    background:rgb(18, 50, 97);
}

/* 滑块周围的空白区域 */
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal,
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background:rgba(59, 88, 133, 0.2);
    border-radius: 4px;
}

ChatBubble{
    background: rgba(255,255,255,0.5);
}

/* ====== QMenu 样式 ====== */
QMenu {
    background-color: rgba(255, 255, 255, 0.95); /* 半透明白色背景 */
    border: 1px solid #d0d8e0;                    /* 边框 */
    border-radius: 4px;                           /* 圆角 */
    padding: 5px 1px;                             /* 内边距 */
    font-size: 14px;
    color: #333333;                               /* 文字颜色 */
    font-weight: normal;                          /* 正常字体粗细 */
}

/* 菜单项样式 */
QMenu::item {
    background-color: transparent;                /* 透明背景 */
    padding: 8px 30px 8px 20px;                   /* 内边距 */
    border-bottom: 1px solid transparent;         /* 透明边框 */
    margin: 2px;                                  /* 外边距 */
}

/* 菜单项悬停效果 */
QMenu::item:selected, QMenu::item:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(26, 41, 128, 0.3), stop:1 rgba(38, 208, 206, 0.3)); /* 渐变蓝色背景 */
    color: #1a2980;                              /* 深蓝色文字 */
    border-bottom: 1px solid #d0d8e0;             /* 底部边框 */
    border-radius: 3px;                           /* 圆角 */
}

/* 菜单项禁用状态 */
QMenu::item:disabled {
    color: #aaaaaa;                               /* 灰色文字 */
    background-color: transparent;                /* 透明背景 */
}

/* 分隔线样式 */
QMenu::separator {
    height: 1px;                                  /* 高度 */
    background-color: #d0d8e0;                    /* 灰色 */
    margin: 4px 8px;                              /* 外边距 */
}

/* 右侧箭头样式（指示子菜单） */
QMenu::right-arrow {
    margin-right: 10px;                           /* 右外边距 */
    image: url(:/images/arrow-right.png);         /* 图片 */
}

/* 可勾选菜单项 - 未选中状态 */
QMenu::indicator:unchecked {
    border: 1px solid #d0d8e0;                    /* 边框 */
    background: #f0f4f8;                          /* 背景色 */
    width: 16px;
    height: 16px;
}

/* 可勾选菜单项 - 选中状态 */
QMenu::indicator:checked {
    border: 1px solid #1a2980;                    /* 边框 */
    background: #26d0ce;                          /* 背景色 */
    image: url(:/images/checkmark.png);           /* 勾选图标 */
    width: 16px;
    height: 16px;
}

/* 图标区域样式 */
QMenu::icon {
    margin-left: 15px;                            /* 左外边距 */
    padding-right: 10px;                          /* 右内边距 */
}

/* ====== QSpinBox 整体样式 ====== */
QSpinBox {
    background-color: rgba(240, 244, 248, 0.95);  /* 淡蓝色背景 */
    border: 2px solid #d0d8e0;                   /* 边框颜色 */
    border-radius: 4px;                          /* 圆角半径 */
    color: #1a2980;                              /* 文字颜色 */
    font-weight: bold;                           /* 加粗文字 */
    font-size: 14px;                            /* 字体大小 */
    selection-background-color: #26d0ce;         /* 选择文本背景色 */
    selection-color: white;                      /* 选择文本颜色 */
}

/* 悬停状态 */
QSpinBox:hover {
    border-color: #a6b1e1;                      /* 悬停时的边框颜色 */
    background-color: rgba(240, 244, 248, 0.85); /* 略透明的背景 */
}

/* 获得焦点状态 */
QSpinBox:focus {
    border-color: #26d0ce;                      /* 焦点时的边框颜色 */
    background-color: white;                    /* 白色背景更醒目 */
}

/* 禁用状态 */
QSpinBox:disabled {
    background-color: rgba(240, 240, 240, 0.7); /* 灰色背景 */
    color: #a0a0a0;                            /* 灰色文字 */
    border-color: #d0d0d0;                      /* 浅灰色边框 */
}

/* ====== 上下箭头按钮区域 ====== */
QSpinBox::up-button, QSpinBox::down-button {
    background: rgba(230, 240, 245, 0.85);      /* 半透明背景 */
    subcontrol-origin: margin;                  /* 按钮定位 */
    width: 18px;                               /* 宽度 */
    border-left: 1px solid #d0d8e0;            /* 左侧分隔线 */
}

/* 按钮悬停状态 */
QSpinBox::up-button:hover, QSpinBox::down-button:hover {
    background: qlineargradient(
        x1:0, y1:0, 
        x2:0, y2:1, 
        stop:0 rgba(255, 255, 255, 0.6), 
        stop:1 rgba(230, 240, 245, 0.85)
    );
}

/* 按钮按下状态 */
QSpinBox::up-button:pressed, QSpinBox::down-button:pressed {
    background: qlineargradient(
        x1:0, y1:0, 
        x2:0, y2:1, 
        stop:0 #1a2980, 
        stop:1 #26d0ce
    );
}

/* 上按钮位置 */
QSpinBox::up-button {
    subcontrol-position: top right;              /* 位于右上角 */
    border-bottom-left-radius: 0;                /* 移除底部圆角 */
    border-bottom-right-radius: 0;               /* 移除底部圆角 */
    margin-right: 2px;                           /* 右边距 */
    top: 1px;                                    /* 上边距 */
    height: 50%;                                 /* 占50%高度 */
}

/* 下按钮位置 */
QSpinBox::down-button {
    subcontrol-position: bottom right;            /* 位于右下角 */
    border-top-left-radius: 0;                   /* 移除顶部圆角 */
    border-top-right-radius: 0;                  /* 移除顶部圆角 */
    margin-right: 2px;                           /* 右边距 */
    bottom: 1px;                                 /* 下边距 */
    height: 50%;                                 /* 占50%高度 */
}

/* 按钮禁用状态 */
QSpinBox::up-button:disabled, QSpinBox::down-button:disabled {
    background: transparent;                     /* 透明背景 */
}

/* ====== 增/减按钮区域悬停状态 ====== */
QSpinBox::up-button:hover:!pressed, QSpinBox::down-button:hover:!pressed {
    background: rgba(255, 255, 255, 0.4);        /* 悬停时的背景色 */
}

/* ====== 编辑框特定样式 ====== */
QSpinBox QLineEdit {  /* 针对内部编辑框的样式 */
    background: transparent;                     /* 透明背景 */
    border: none;                               /* 无边框 */
    padding-right: 0;                           /* 移除右侧内边距 */
    margin: 0;                                  /* 移除外边距 */
    font: inherit;                              /* 继承父字体 */
}

/* ====== QLabel 禁用状态 ====== */
QLabel:disabled {
    color: #a0a0a0;
    background-color: rgba(240, 240, 240, 0.7);
}

/* ====== QLineEdit 禁用状态 ====== */
QLineEdit:disabled {
    background-color: #f0f0f0;
    border-color: #e0e0e0;
    color: #909090;
    qproperty-toolTip: "控件已禁用";
}

/* ====== 单选/复选框禁用状态 ====== */
QRadioButton:disabled, QCheckBox:disabled {
    color: #b0b0b0;
}

QRadioButton::indicator:disabled, 
QCheckBox::indicator:disabled {
    border-color: #e0e0e0;
}

QRadioButton::indicator:checked:disabled, 
QCheckBox::indicator:checked:disabled {
    background-color: #d0d0d0;
    border-color: #b0b0b0;
}

/* ====== 树控件禁用状态 ====== */
QTreeWidget:disabled {
    background-color: rgba(245, 245, 245, 0.8);
    color: #909090;
}

QTreeWidget::item:disabled, 
QTreeWidget::item:disabled:hover, 
QTreeWidget::item:disabled:selected {
    background: transparent;
    color: #b0b0b0;
}

/* ====== 列表控件禁用状态 ====== */
QListWidget:disabled {
    background-color: rgba(245, 245, 245, 0.8);
    border-color: #e5e5e5;
}

QListWidget::item:disabled, 
QListWidget::item:disabled:hover, 
QListWidget::item:disabled:selected {
    background: #f0f0f0;
    color: #b0b0b0;
}

/* ====== 组合框禁用状态 ====== */
QComboBox:disabled {
    background: #f5f5f5;
    border-color: #e0e0e0;
    color: #909090;
}

QComboBox::drop-down:disabled {
    border-left-color: #e0e0e0;
}

/* ====== 进度条禁用状态 ====== */
QProgressBar:disabled {
    background-color: #f0f0f0;
    color: gray;
}

QProgressBar::chunk:disabled {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #d0d0d0, stop:1 #e0e0e0);
}

/* ====== 选项卡禁用状态 ====== */
QTabBar::tab:disabled {
    background: #ebebeb;
    color: #b0b0b0;
    border-color: #d8d8d8;
}

/* ====== 文本编辑区禁用状态 ====== */
QTextEdit:disabled, 
QTextBrowser:disabled {
    background-color: rgba(245, 245, 245, 0.8);
    color: #909090;
    border-color: #e0e0e0;
}

/* ====== 菜单项禁用状态 ====== */
QMenu::item:disabled {
    /* 注意：QSS没有:disabled伪类，使用!enabled属性选择器 */
    color: #c0c0c0;
}

QMenu::item:!enabled {
    /* QSS特殊语法 */
    color: #c0c0c0;
    background: transparent;
}

/* ====== 卡片/组框禁用状态 ====== */
QGroupBox:disabled {
    color: #b0b0b0;
}

/* ====== 旋钮框禁用状态补充 ====== */
QSpinBox::up-button:disabled, 
QSpinBox::down-button:disabled {
    background: transparent;
    border-left-color: #e0e0e0;
}

/* ====== 滚动条禁用状态 ====== */
QScrollBar:disabled, 
QScrollBar::handle:disabled {
    background: #e5e5e5;
}