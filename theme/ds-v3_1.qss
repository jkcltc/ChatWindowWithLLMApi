/* 工业风格配色方案 */
/* 主窗口样式 */
QWidget {
    font-family: 'Segoe UI', 'Microsoft YaHei', sans-serif;
    font-size: 14px;
    background-color: #2b2b2b; /* 深灰背景 */
    color: #cccccc; /* 浅灰文字 */
}

QLabel {
    font-size: 15px;
    font-weight: bold;
    color: #e0e0e0; /* 浅灰色 */
    padding: 2px;
    background-color: rgba(60, 63, 65, 0.8); /* 深灰背景 */
    border-radius: 2px;
    border: 1px solid #555555; /* 添加边框 */
}

/* 图标样式 */
QLabel#icon-user {
    background-color: #8c8c8c; /* 中灰色 */
    border-radius: 30px;
    color: #e0e0e0;
    font-size: 24px;
    border: 1px solid #555555;
}

QLabel#icon-chart-bar {
    background-color: #3a3a3a; /* 深灰 */
    border-radius: 30px;
    color: #e0e0e0;
    font-size: 24px;
    border: 1px solid #555555;
}

QLabel#icon-cog {
    background-color: #5a5a5a; /* 中灰 */
    border-radius: 30px;
    color: #e0e0e0;
    font-size: 24px;
    border: 1px solid #555555;
}

/* 按钮样式 */
QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #3a3a3a, stop:1 #5a5a5a); /* 深灰到中灰渐变 */
    color: #e0e0e0;
    border: 1px solid #555555;
    border-radius: 3px;
    padding: 10px 20px;
    font-weight: bold;
}

QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #4a4a4a, stop:1 #6a6a6a); /* 更亮的灰色 */
}

QPushButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #2a2a2a, stop:1 #4a4a4a); /* 更暗的灰色 */
}

QPushButton:disabled {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #3a3a3a, stop:1 #4a4a4a);  /* 灰色渐变 */
    color: #7a7a7a;  /* 灰色文字 */
    border: 1px solid #555555;  /* 灰色边框 */
}

/* 表单样式 */
QGroupBox {
    background-color: rgba(60, 63, 65, 0.9);
    border-radius: 15px;
    border: 1px solid #555555;
    color: #e0e0e0;
    font-size: 18px;
    font-weight: bold;
    padding-top: 20px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 0 10px;
    background-color: transparent;
    color: #e0e0e0;
}

QLineEdit {
    background-color: #3a3a3a;
    border: 2px solid #555555;
    border-radius: 4px;
    padding: 3px 6px;
    font-size: 14px;
    min-height: 20px;
    color: #e0e0e0;
}

QLineEdit:focus {
    border-color: #7a7a7a;
    background-color: #4a4a4a;
}

QRadioButton, QCheckBox {
    color: #e0e0e0;
    spacing: 8px;
}

QRadioButton::indicator, QCheckBox::indicator {
    width: 20px;
    height: 20px;
    border-radius: 10px;
    border: 2px solid #555555;
    background-color: #3a3a3a;
}

QRadioButton::indicator:checked, QCheckBox::indicator:checked {
    background-color: #5a5a5a;
    border: 2px solid #7a7a7a;
}

/* 状态栏 */
QStatusBar {
    background-color: rgba(40, 43, 45, 0.95);
    color: #e0e0e0;
    font-size: 12px;
    padding: 5px 10px;
    border-top: 1px solid #555555;
}

/* 进度条 */
QProgressBar {
    border: 1px solid #555555;
    border-radius: 5px;
    background-color: #3a3a3a;
    text-align: center;
    color: #e0e0e0;
}

QProgressBar::chunk {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #5a5a5a, stop:1 #7a7a7a); /* 灰色渐变 */
    border-radius: 4px;
}

/* 选项卡 */
QTabWidget::pane {
    border: 1px solid #555555;
    border-radius: 8px;
    background: #3a3a3a;
}

QTabBar::tab {
    background: #3a3a3a;
    color: #cccccc;
    padding: 8px 20px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    margin-right: 2px;
    border: 1px solid #555555;
    border-bottom: none;
}

QTabBar::tab:selected {
    background: #4a4a4a;
    color: #e0e0e0;
    font-weight: bold;
    border-color: #555555;
}

QTabBar::tab:hover {
    background: #5a5a5a;
}

/* 树控件样式 */
QTreeWidget {
    background-color: rgba(60, 63, 65, 0.9);
    border-radius: 8px;
    border: 1px solid #555555;
    padding: 5px;
    font-size: 14px;
    color: #e0e0e0;
    outline: 0;
}

QTreeWidget::item {
    height: 32px;
    padding: 4px;
    border-bottom: 1px solid #555555;
    color: #e0e0e0;
}

QTreeWidget::item:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 rgba(90, 90, 90, 0.5), stop:1 rgba(120, 120, 120, 0.5));
    color: #ffffff;
}

QTreeWidget::item:selected {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 rgba(90, 90, 90, 0.7), stop:1 rgba(120, 120, 120, 0.7));
    color: #ffffff;
}

/* 文本编辑区 */
QTextEdit, QTextBrowser {
    background-color: rgba(60, 63, 65, 0.9);
    border-radius: 8px;
    border: 1px solid #555555;
    padding: 6px;
    font-size: 18px;
    color: #e0e0e0;
}

/* 列表控件 */
QListWidget {
    background-color: rgba(60, 63, 65, 0.9);
    border: 2px solid #555555;
    border-radius: 10px;
    padding: 5px;
    outline: none;
    color: #e0e0e0;
    font-size: 14px;
}

QListWidget::item {
    background-color: #3a3a3a;
    border-radius: 8px;
    padding: 2px 2px;
    margin: 4px 0;
    color: #e0e0e0;
    border: 1px solid #555555;
}

QListWidget::item:selected {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #5a5a5a, stop:1 #7a7a7a);
    color: #ffffff;
    border: 1px solid #777777;
}

QListWidget::item:hover {
    background-color: #4a4a4a;
}

/* 组合框 */
QComboBox {
    background-color: #3a3a3a;
    border: 2px solid #555555;
    border-radius: 4px;
    padding: 2px 4px;
    font-size: 12px;
    color: #e0e0e0;
}

QComboBox:editable {
    background: #4a4a4a;
}

QComboBox:focus {
    border-color: #7a7a7a;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 10px;
    border-left: 1px solid #555555;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    background-color: #4a4a4a;
}

QComboBox QAbstractItemView {
    background-color: rgba(60, 63, 65, 0.95);
    border: 2px solid #555555;
    border-radius: 4px;
    padding: 5px;
    outline: none;
    selection-background-color: #5a5a5a;
    selection-color: #ffffff;
    color: #e0e0e0;
}

QComboBox QAbstractItemView::item {
    padding: 2px 4px;
    border-radius: 3px;
    margin: 2px;
}

QComboBox QAbstractItemView::item:hover {
    background-color: #4a4a4a;
}

/* 工具按钮 */
QToolButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #3a3a3a, stop:1 #5a5a5a);
    color: #e0e0e0;
    border: 1px solid #555555;
    border-radius: 3px;
    margin: 1px;
    font-weight: bold;
    min-width: 0;
    min-height: 24px;
}

QToolButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #4a4a4a, stop:1 #6a6a6a);
}

QToolButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #2a2a2a, stop:1 #4a4a4a);
}

QToolButton:disabled {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #3a3a3a, stop:1 #4a4a4a);
    color: #7a7a7a;
    border: 1px solid #555555;
}

/* 滚动条 */
QScrollBar:vertical {
    background: rgba(60, 63, 65, 0.7);
    width: 12px;
    margin: 0;
    border-radius: 4px;
    border: 1px solid #555555;
}

QScrollBar::handle:vertical {
    background: #5a5a5a;
    border-radius: 4px;
    min-height: 24px;
    border: 1px solid #555555;
}

QScrollBar:horizontal {
    background: rgba(60, 63, 65, 0.7);
    height: 9px;
    margin: 0;
    border-radius: 4px;
    border: 1px solid #555555;
}

QScrollBar::handle:horizontal {
    background: #5a5a5a;
    border-radius: 4px;
    min-width: 24px;
    border: 1px solid #555555;
}

QScrollBar::handle:vertical:hover,
QScrollBar::handle:horizontal:hover {
    background: #6a6a6a;
}

QScrollBar::handle:vertical:pressed,
QScrollBar::handle:horizontal:pressed {
    background: #4a4a4a;
}

/* 菜单 */
QMenu {
    background-color: rgba(60, 63, 65, 0.95);
    border: 1px solid #555555;
    border-radius: 4px;
    padding: 5px 1px;
    font-size: 14px;
    color: #e0e0e0;
}

QMenu::item {
    background-color: transparent;
    padding: 8px 30px 8px 20px;
    border-bottom: 1px solid transparent;
    margin: 2px;
    color: #e0e0e0;
}

QMenu::item:selected, QMenu::item:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 rgba(90, 90, 90, 0.5), stop:1 rgba(120, 120, 120, 0.5));
    color: #ffffff;
    border-bottom: 1px solid #555555;
    border-radius: 3px;
}

QMenu::item:disabled {
    color: #7a7a7a;
    background-color: transparent;
}

QMenu::separator {
    height: 1px;
    background-color: #555555;
    margin: 4px 8px;
}

/* 旋钮框 */
QSpinBox {
    background-color: rgba(60, 63, 65, 0.95);
    border: 2px solid #555555;
    border-radius: 4px;
    color: #e0e0e0;
    font-weight: bold;
    font-size: 14px;
    selection-background-color: #5a5a5a;
    selection-color: #ffffff;
}

QSpinBox:hover {
    border-color: #7a7a7a;
    background-color: rgba(70, 73, 75, 0.95);
}

QSpinBox:focus {
    border-color: #7a7a7a;
    background-color: #4a4a4a;
}

QSpinBox:disabled {
    background-color: rgba(50, 53, 55, 0.7);
    color: #7a7a7a;
    border-color: #555555;
}

QSpinBox::up-button, QSpinBox::down-button {
    background: rgba(70, 73, 75, 0.85);
    subcontrol-origin: margin;
    width: 18px;
    border-left: 1px solid #555555;
}

QSpinBox::up-button:hover, QSpinBox::down-button:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 rgba(90, 90, 90, 0.6), stop:1 rgba(70, 73, 75, 0.85));
}

QSpinBox::up-button:pressed, QSpinBox::down-button:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #4a4a4a, stop:1 #6a6a6a);
}

/* 禁用状态样式 */
QLabel:disabled {
    color: #7a7a7a;
    background-color: rgba(50, 53, 55, 0.7);
    border-color: #555555;
}

QLineEdit:disabled {
    background-color: #3a3a3a;
    border-color: #555555;
    color: #7a7a7a;
}

QRadioButton:disabled, QCheckBox:disabled {
    color: #7a7a7a;
}

QRadioButton::indicator:disabled, QCheckBox::indicator:disabled {
    border-color: #555555;
    background-color: #3a3a3a;
}

QRadioButton::indicator:checked:disabled, QCheckBox::indicator:checked:disabled {
    background-color: #5a5a5a;
    border-color: #555555;
}

QTreeWidget:disabled {
    background-color: rgba(50, 53, 55, 0.8);
    color: #7a7a7a;
    border-color: #555555;
}

QListWidget:disabled {
    background-color: rgba(50, 53, 55, 0.8);
    border-color: #555555;
    color: #7a7a7a;
}

QComboBox:disabled {
    background: #3a3a3a;
    border-color: #555555;
    color: #7a7a7a;
}

QProgressBar:disabled {
    background-color: #3a3a3a;
    color: #7a7a7a;
    border-color: #555555;
}

QProgressBar::chunk:disabled {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #4a4a4a, stop:1 #5a5a5a);
}

QTabBar::tab:disabled {
    background: #3a3a3a;
    color: #7a7a7a;
    border-color: #555555;
}

QTextEdit:disabled, QTextBrowser:disabled {
    background-color: rgba(50, 53, 55, 0.8);
    color: #7a7a7a;
    border-color: #555555;
}